<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/purchase">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/purchase">

        <TextView
            android:id="@+id/Tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="Tour"
            android:textColor="#E21181"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombreTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Tour"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Nombre de Destino"
            android:textColor="#043764" />
        <TextView
            android:id="@+id/Fecha"
            android:layout_below="@+id/nombreTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="Fecha"
            android:textColor="#E21181"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textoDeFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Fecha"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Nombre de Destino"
            android:textColor="#043764" />

    </RelativeLayout>

</RelativeLayout>